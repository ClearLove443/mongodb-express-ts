  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Express Typescript",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "api/index.js",
      "outFiles": [
        "${workspaceFolder}/api/**/*.js"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "preLaunchTask": "prepare app to debug",
      "postDebugTask": "clean app after debug"
    }
  ]
}